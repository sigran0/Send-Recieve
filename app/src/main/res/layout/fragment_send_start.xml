<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="물품을 보내실려면 여기를 눌러주세요"
        android:textColor="@color/md_white_1000"
        android:textSize="20sp"
        android:alpha="0.5"
        app:layout_constraintBottom_toTopOf="@+id/f_send_start_sdv"
        app:layout_constraintEnd_toEndOf="@+id/f_send_start_sdv"
        app:layout_constraintStart_toStartOf="@+id/f_send_start_sdv" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/f_send_start_sdv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/baseline_local_shipping_white_48" />

</android.support.constraint.ConstraintLayout>