<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/f_my_info_sdv_profile"
        android:layout_width="225dp"
        android:layout_height="223dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/f_my_info_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0.75"
        android:gravity="center"
        android:text="정성우"
        android:textColor="@color/md_white_1000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/f_my_info_sdv_profile"
        app:layout_constraintStart_toStartOf="@+id/f_my_info_sdv_profile"
        app:layout_constraintTop_toBottomOf="@+id/f_my_info_sdv_profile" />

    <TextView
        android:id="@+id/f_my_info_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0.75"
        android:gravity="center"
        android:text="일반회원"
        android:textColor="@color/md_white_1000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/f_my_info_tv_username"
        app:layout_constraintStart_toStartOf="@+id/f_my_info_tv_username"
        app:layout_constraintTop_toBottomOf="@+id/f_my_info_tv_username" />

    <Button
        android:id="@+id/f_my_info_bt_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ripple"
        android:text="보낸 물건 내역 조회하기"
        android:textColor="@color/md_white_1000"
        app:layout_constraintBottom_toTopOf="@+id/f_my_info_bt_logout"
        app:layout_constraintEnd_toEndOf="@+id/f_my_info_tv_type"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/f_my_info_tv_type" />

    <Button
        android:id="@+id/f_my_info_bt_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ripple"
        android:text="로그아웃"
        android:textColor="@color/md_red_A400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/f_my_info_bt_list"
        app:layout_constraintStart_toStartOf="@+id/f_my_info_bt_list" />


</android.support.constraint.ConstraintLayout>